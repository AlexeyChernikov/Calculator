<UserControl x:Class="Calculator.Views.StandartCalculatorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Calculator.Views"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="320">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>

        <!--Display-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition MinHeight="25" Height="25*"/>
                <RowDefinition Height="74*"/>
            </Grid.RowDefinitions>

            <!--Current expression-->
            <TextBlock 
                Text="0" 
                Margin="0,0,10,0"
                Grid.Row="0" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center"
                FontSize="16" 
                FontWeight="Bold" 
                FontFamily="Microsoft JhengHei" 
                Foreground="#FF4D4D4D"/>

            <!--Current number-->
            <TextBlock 
                Text="0" 
                Margin="0,0,10,0"
                Grid.Row="1" 
                HorizontalAlignment="Right" 
                FontSize="43" 
                FontWeight="Bold" 
                FontFamily="Microsoft JhengHei"/>
        </Grid>

        <!--Keyboard-->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="75"/>
                <RowDefinition Height="10*"/>
            </Grid.RowDefinitions>

            <!--Memory buttons-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Content="MC" Command="" Grid.Column="0"/>
                <Button Content="MR" Command="" Grid.Column="1"/>
                <Button Content="M+" Command="" Grid.Column="2"/>
                <Button Content="M-" Command="" Grid.Column="3"/>
                <Button Content="MS" Command="" Grid.Column="4"/>
            </Grid>

            <!--Main keyboard-->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!--#region Additional operation buttons-->
                <Button Content="%" Command="" Grid.Column="0" Grid.Row="0"/>
                <Button Content="CE" Command="" Grid.Column="1" Grid.Row="0"/>
                <Button Content="C" Command="" Grid.Column="2" Grid.Row="0"/>
                <Button Content="⌫" Command="" Grid.Column="3" Grid.Row="0"/>
                <Button Content="1/x" Command="" Grid.Column="0" Grid.Row="1"/>
                <Button Content="x²" Command="" Grid.Column="1" Grid.Row="1"/>
                <Button Content="√x" Command="" Grid.Column="2" Grid.Row="1"/>
                <!--#endregion -->

                <!--Arithmetic operation buttons-->
                <Grid Grid.Row="1" Grid.Column="3" Grid.RowSpan="4">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Content="÷" Command="" Grid.Row="0"/>
                    <Button Content="×" Command="" Grid.Row="1"/>
                    <Button Content="‒" Command="" Grid.Row="2"/>
                    <Button Content="+" Command="" Grid.Row="3"/>
                </Grid>

                <!--Result button-->
                <Button Content="=" Command="" Grid.Column="3" Grid.Row="5"/>

                <!--Number buttons-->
                <Grid Grid.Row="2" Grid.ColumnSpan="3" Grid.RowSpan="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Button Content="0" Command="" Grid.Column="1" Grid.Row="3"/>
                    <Button Content="1" Command="" Grid.Column="0" Grid.Row="2"/>
                    <Button Content="2" Command="" Grid.Column="1" Grid.Row="2"/>
                    <Button Content="3" Command="" Grid.Column="2" Grid.Row="2"/>
                    <Button Content="4" Command="" Grid.Column="0" Grid.Row="1"/>
                    <Button Content="5" Command="" Grid.Column="1" Grid.Row="1"/>
                    <Button Content="6" Command="" Grid.Column="2" Grid.Row="1"/>
                    <Button Content="7" Command="" Grid.Column="0" Grid.Row="0"/>
                    <Button Content="8" Command="" Grid.Column="1" Grid.Row="0"/>
                    <Button Content="9" Command="" Grid.Column="2" Grid.Row="0"/>
                    <Button Content="+/-" Command="" Grid.Column="0" Grid.Row="3"/>
                    <Button Content="," Command="" Grid.Column="2" Grid.Row="3"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>